# Google Analytics Configuration
GA_PROPERTY_ID=your-ga-property-id
GA_CREDENTIALS_PATH=/app/credentials/ga-service-account.json

# Tier Classification Thresholds
TIER1_MIN_VISITORS=10000
TIER2_MIN_VISITORS=1000
TIER3_MIN_VISITORS=100

# Deployment Settings
DRY_RUN=true
PARALLEL_DEPLOYMENTS=5
SSH_USER=deploy
SSH_KEY_PATH=~/.ssh/id_rsa

# Paths
SEARCH_DIR=/var/opt/sites
CONFIG_DIR=/app/config
DATA_DIR=/app/data

# Legacy (for backward compatibility)
APPLY_FIX_SCRIPT=/var/www/ciwebgroup/wp-hubstack/scripts/server/apache-mem-fix/apply_fix.sh

# Logging
LOG_LEVEL=INFO
